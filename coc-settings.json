{
  "diagnostic": {
    "level": "warning",
    "errorSign": "✗",
    "warningSign" :"⚠️",
    "maxWindowHight": 300
  },
  "coc": {
    "preferences": {
      "formatOnSaveFiletypes": ["scala", "typescriptreact", "typescript", "javascript", "css", "vue", "html"]
    }
  },
  "list": {
    "insertMappings": {
        "<C-n>": "normal:j",
        "<C-p>": "normal:k"
    },
    "source" : {
      "grep": {
        "command": "ag"
      }
    }
  },
  "languageserver": {
      "dotty": {
        "command": "run-dotty-lsp",
          "rootPatterns": ["build.sbt"],
          "filetypes": ["scala", "sbt"]
      }
  },
  "prettier.disableLanguages": [],
  "html.format.enable": true,
  "metals.excludedPackages": [
    "akka.actor.typed.javadsl",
    "com.github.swagger.akka.javadsl"
  ],
  "metals.implicitArgumentAnnotationsEnabled": true,
  "metals.typeAnnotationsEnabled": true,
  "metals.statusBarEnabled": true,
  "metals.superMethodLensesEnabled": true
}
